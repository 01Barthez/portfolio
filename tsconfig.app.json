{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"jsx": "react-jsx",
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"skipLibCheck": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"noEmit": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
